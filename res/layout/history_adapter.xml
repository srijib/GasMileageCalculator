<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:contentDescription="fillup or service icon"
    android:orientation="horizontal"
    android:padding="8dp" >

    <ImageView
        android:id="@+id/img_fillup"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@android:drawable/ic_menu_recent_history"
        android:contentDescription="Fillup Icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerPadding="2dp"
            android:orientation="horizontal"
            android:padding="4dp" >

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/textView_fillup_date"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_mileage"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:text="25.00 mpg"
                android:textColor="@color/fillup_above_avg"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp" >

            <TextView
                android:id="@+id/txt_vehicle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:padding="2dp"
                android:text="@string/vehicle_nickname"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_fuel_volume"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:text="17.50 gal"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_fuel_rate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:text="$ 4.00/gal"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_fillup_cost"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:text="$ 78.50"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>